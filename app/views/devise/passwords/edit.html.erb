<% content_for(:body_class) { 'text-center' } %>

<%= simple_form_for(resource, as: resource_name,
                              url: password_path(resource_name),
                              html: { method: :put, class: "new_user user-form" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <h1 class="h3 mb-3 font-weight-normal">Change your password</h1>

  <%= f.input :password, label_html: { class: "sr-only" },
                         placeholder: "Password",
                         hint: "6 characters minimum",
                         required: true,
                         autocomplete: "new-password" %>

  <%= f.input :password_confirmation, label_html: { class: "sr-only" },
                                      placeholder: 'Password confirmation',
                                      required: true,
                                      autocomplete: "new-password" %>

  <%= f.button :submit, "Change my password", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
