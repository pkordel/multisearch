<% content_for(:body_class) { 'text-center' } %>

<%= form_for(resource, as: resource_name,
                       url: password_path(resource_name),
                       html: { method: :post, class: 'user-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, class: "form-control",
                            autofocus: true,
                            placeholder: 'Email',
                            autocomplete: "email" %>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Send me reset password instructions</button>
<% end %>

<%= render "devise/shared/links" %>
