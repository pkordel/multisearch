<% content_for(:body_class) { 'text-center' } %>

<%= simple_form_for(resource, as: resource_name,
                              url: password_path(resource_name),
                              html: { method: :post, class: 'user-form' }) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

  <%= f.input :email, label_html: { class: "sr-only" },
                      required: true,
                      autofocus: true,
                      autocomplete: "email" %>

  <%= f.button :submit, "Send me reset password instructions", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
