<% content_for(:body_class) { 'text-center' } %>


<%= simple_form_for(resource, as: resource_name,
                              url: registration_path(resource_name),
                              html: { method: :put, class: 'user-form' }) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">Edit <%= resource_name.to_s.humanize %></h1>

  <%= f.input :email, label_html: { class: "sr-only" },
                      placeholder: "you@example.com",
                      required: true,
                      autofocus: true,
                      autocomplete: "email" %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.input :password, label_html: { class: "sr-only" },
                         placeholder: "Password",
                         hint: "leave blank if you don't want to change it",
                         required: true,
                         autocomplete: "new-password" %>

  <%= f.input :password_confirmation, label_html: { class: "sr-only" },
                                      placeholder: 'Password confirmation',
                                      required: true,
                                      autocomplete: "new-password" %>

  <%= f.input :current_password, label_html: { class: "sr-only" },
                                 placeholder: "Current password",
                                 hint: "we need your current password to confirm your changes",
                                 autocomplete: "current-password" %>

  <%= f.button :submit, "Update", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-lg btn-secondary', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
