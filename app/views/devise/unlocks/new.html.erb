<% content_for(:body_class) { 'text-center' } %>

<%= simple_form_for(resource, as: resource_name,
                              url: unlock_path(resource_name),
                              html: { method: :post, class: 'new_user user-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Resend unlock instructions</h1>

  <%= f.input :email, label_html: { class: "sr-only" },
                      required: true,
                      autofocus: true,
                      autocomplete: "email" %>

  <%= f.button :submit, "Resend unlock instructions", class: "btn btn-lg btn-primary btn-block" %>
<% end %>

<%= render "devise/shared/links" %>
