<% content_for(:body_class) { 'text-center' } %>

<%= form_for(resource, as: resource_name,
                       url: unlock_path(resource_name),
                       html: { method: :post, class: 'new_user user-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="h3 mb-3 font-weight-normal">Resend unlock instructions</h1>

  <%= f.label :email, class: 'sr-only' %>
  <%= f.email_field :email, class: 'form-control',
                            placeholder: 'Email',
                            autofocus: true,
                            autocomplete: "email" %>

  <button class="btn btn-lg btn-primary btn-block" type="submit">Resend unlock instructions</button>
<% end %>

<%= render "devise/shared/links" %>
